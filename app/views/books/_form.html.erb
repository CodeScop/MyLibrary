<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :book_title %>
    <%= f.input :author %>
    <%= f.input :genre %>
    <%= f.input :reading_level %>
    <%= f.input :number_of_pages %>
    <%= f.input :copyrighted %>
    <%= f.input :publisher %>
    <%= f.input :summary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
