<h1>Novels</h1>

<table>
  <thead>
    <tr>
      <th>Book title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Reading level</th>
      <th>Number of pages</th>
      <th>Copyrighted</th>
      <th>Publisher</th>
    </tr>
  </thead>

  <tbody>
    <% @novel_length_books.each do |book| %>
	  <tr>
        <td><%= book.book_title %></td>
        <td><%= book.author %></td>
